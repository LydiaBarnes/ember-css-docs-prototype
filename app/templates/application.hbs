<header class="app-header">
  <h1>{{#link-to "index"}}Ember Component Library Demo{{/link-to}}</h1>
  <nav class="app-navigation">
    <ul class="secondary-nav">
      <li>{{#link-to "about"}}About{{/link-to}}</li>
      <li>{{#link-to "getting-started"}}Getting Started{{/link-to}}</li>
      <li>{{#link-to "best-practices"}}Best Practices{{/link-to}}</li>
