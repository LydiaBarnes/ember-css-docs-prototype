      }}
    </section>

    <section class="ui-category">
      {{component-chooser
        components=model
        category="elements"
      }}
    </section>

    <section class="ui-category">
      {{component-chooser
        components=model
        category="widgets"
      }}
    </section>

    <section class="ui-category">
      {{component-chooser
        components=model
        category="architecture"
      }}
    </section>
  </nav>


  <main class="content">
    {{outlet}}
  </main>

</div>

